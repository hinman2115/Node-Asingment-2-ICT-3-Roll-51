<!DOCTYPE html>
<html>
<head>
  <% include ../partials/head %>
</head>
<body>
<% include ../partials/nav %>
<main>
  <h2>Employee Details</h2>
  <table>
    <tr><th>Emp ID</th><td><%= employee.empId %></td></tr>
    <tr><th>Name</th><td><%= employee.name %></td></tr>
    <tr><th>Email</th><td><%= employee.email %></td></tr>
    <tr><th>Phone</th><td><%= employee.phone || '-' %></td></tr>
    <tr><th>Department</th><td><%= employee.department || '-' %></td></tr>
    <tr><th>Basic</th><td><%= employee.basic %></td></tr>
    <tr><th>HRA (%)</th><td><%= employee.hraPercent %> %</td></tr>
    <tr><th>DA (%)</th><td><%= employee.daPercent %> %</td></tr>
    <tr><th>HRA (₹)</th><td><%= employee.hra %></td></tr>
    <tr><th>DA (₹)</th><td><%= employee.da %></td></tr>
    <tr><th>Gross (₹)</th><td><%= employee.grossSalary %></td></tr>
    <tr><th>Deductions (₹)</th><td><%= employee.deductions %></td></tr>
    <tr><th>Net (₹)</th><td><%= employee.netSalary %></td></tr>
    <tr><th>Active</th><td><%= employee.isActive ? 'Yes' : 'No' %></td></tr>
  </table>
  <p>
    <a href="/employees/<%= employee._id %>/edit">Edit</a> |
    <a href="/employees">Back to list</a>
  </p>
</main>
</body>
</html>
